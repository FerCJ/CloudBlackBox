<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvModo"
    android:layout_width="@dimen/modoW"
    android:layout_height="@dimen/modoH"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:background="#FFFFFF"
    android:padding="0dip"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="0dip">

        <TextView
            android:id="@+id/tvModo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"

            android:text="@string/seleccionar_trayecto"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:fontFamily="@font/roboto" />

        <ImageView
            android:id="@+id/imgModo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/trayectoicon"
            android:layout_gravity="center"></ImageView>




    </LinearLayout>

</androidx.cardview.widget.CardView>